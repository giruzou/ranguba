<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  <title><%= @title || @ranguba_template.title %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <% if @canonical %>
    <link rel="canonical" href="<%= @canonical %>" />
  <% end %>
</head>
<body>
  <div>
    <%=raw @ranguba_template.header %>
  </div>
  <div>
    <%= yield %>
  </div>
  <div>
    <%=raw @ranguba_template.footer %>
  </div>
</body>
</html>
