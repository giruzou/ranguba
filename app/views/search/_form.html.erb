<div class="search_form">
<%= form_for(@search_request,
            :url => {:controller => "search",
                     :action => "index"}) do |f| %>
  <p><%= f.text_field :query, :size => 25 %><%= submit_tag t(@search_request.empty? ? "search_button_label" : "search_button_add_label") %></p>
  <%= f.hidden_field :base_params %>
<% end %>
</div>

