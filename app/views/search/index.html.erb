<%= render :partial => "form" %>

<% unless @topic_path_items.empty? %>
  <ul class="topic_path">
    <% @topic_path_items.each do |item| %>
      <li class="topic_path_item"><%= link_to "[X] #{item[:label]}",
                                              item[:path],
                                              :title => item[:title] %></li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "drilldown_groups" %>

<% unless @search_request.empty? %>
    <% if @entries.size > 0 %>
      <p><%= will_paginate @raw_entries %></p>
      <dl>
        <% @entries.each do |entry| %>
          <dt><%= link_to entry.title, entry.url %></dt>
            <dd><%= entry.summary %></dd>
        <% end %>
      </dl>
      <p><%= will_paginate @raw_entries %></p>
    <% else %>
      <p><%= t("not_found_message") %></p>
    <% end %>
<% end %>

